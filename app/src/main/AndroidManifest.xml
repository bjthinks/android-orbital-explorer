<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gputreats.orbitalexplorer">

    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />

    <!-- Google Analytics needs these -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Google Analytics tries to add this, but it doesn't need it -->
    <uses-permission android:name="android.permission.WAKE_LOCK" tools:node="remove" />

    <!-- For cardboard -->
    <!-- Required for vibration feedback when the trigger action is performed. -->
    <!-- <uses-permission android:name="android.permission.VIBRATE"/> -->
    <!-- Required to read the paired viewer's distortion parameters. -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!-- Required to detect viewer insertion. -->
    <uses-permission android:name="android.permission.NFC"/>
    <!-- Make accelerometer and gyroscope hard requirements for good head tracking. -->
    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true"/>
    <uses-feature android:name="android.hardware.sensor.gyroscope" android:required="true"/>

    // TODO fix lint error
    <application
        android:name=".OrbitalApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appName"
        android:theme="@style/MainTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/appName"
            android:theme="@style/MainTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CardboardActivity"
            android:label="Cardboard"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.google.intent.category.CARDBOARD" />
            </intent-filter>
        </activity>

        <activity
            android:name=".HelpActivity"
            android:label="Help"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AuxTheme">
        </activity>

        <activity
            android:name=".ErrorActivity"
            android:label="Error"
            android:theme="@style/MainTheme">
            <intent-filter>
                <action android:name="com.gputreats.orbitalexplorer.SHOW_ERROR" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Image sharing -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.gputreats.orbitalexplorer.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/paths" />
        </provider>

    </application>

</manifest>

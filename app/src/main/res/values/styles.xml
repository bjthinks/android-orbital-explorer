<resources>

    <style name="MainTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- App Bar background color -->
        <!-- Also intended as Toolbar background color, but for that to work,
             Toolbar needs the attribute android:background="?attr/colorPrimary" -->
        <item name="colorPrimary">@color/clear</item>
        <!-- Status bar background color and "contextual app bars". To set just the
             status bar, use statusBarColor. -->
        <item name="colorPrimaryDark">@color/black</item>
        <!-- Check boxes, switches, "text fields", etc -->
        <!-- <item name="colorAccent">#88f</item> -->
        <!-- Colors the action bar overflow icon -->
        <item name="colorControlNormal">@color/white</item>
        <!-- Switches get this color when they are turned on -->
        <!--<item name="colorControlActivated">@color/lightblue</item>-->
        <!-- Highlight color to flash when a clickable control is pressed -->
        <item name="colorControlHighlight">@color/white</item>
        <!-- Dunno -->
        <!-- <item name="colorSwitchThumbNormal">#f0f</item> -->
        <!-- Preferences screen and probably most other lists -->
        <!-- <item name="android:listViewStyle">@style/ListStyle</item> -->
        <!-- Action bar overflow menu -->
        <item name="dropDownListViewStyle">@style/ListStyle</item>
        <!-- Toolbar title, text buttons, and text in lists -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Dunno -->
        <!-- <item name="android:textColorSecondary">#f0f</item> -->
        <!-- Plain TextViews get this -->
        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- NOTE: Overridden in values-v21 -->
    <style name="AuxTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorControlNormal">@color/white</item>
        <!-- Darken the Settings activity, which contains a ListView -->
        <item name="android:listViewStyle">@style/ListStyle</item>
    </style>

    <style name="ListStyle" parent="Widget.AppCompat.ListView">
        <item name="android:background">@color/dark</item>
        <!-- <item name="android:divider">#777</item> -->
        <!-- <item name="android:dividerHeight">1dp</item> -->
    </style>

    <style name="ButtonStyle" parent="MainTheme">
        <item name="android:background">@drawable/button_trans</item>
    </style>

</resources>
